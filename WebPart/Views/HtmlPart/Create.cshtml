@model Parts.Entities.SelectionOfParts

@{
    ViewData["Title"] = "Создание новой выборки";
}

<h1>Создание новой выборки</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label>Название</label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label>PartsId</label>
                @{ 
                    <input asp-for="PartsId" class="form-control" />
                  }
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>