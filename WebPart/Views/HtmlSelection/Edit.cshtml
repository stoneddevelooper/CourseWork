@model Parts.Entities.PartInSelection

@{
    ViewData["Title"] = "Обновление выборки";
}


<h1>Обновление выборки</h1>

<h4>Выборка</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            @Html.HiddenFor(p => p.SelectionId)
            <div class="form-group">
                <label>Название</label>
                <input asp-for="Selection.Name" class="form-control" />
            </div>
            <div class="form-group">
                <label>PartId</label>
                @{
                  <input asp-for="PartId" class="form-control" />
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить деталь в выборку" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>